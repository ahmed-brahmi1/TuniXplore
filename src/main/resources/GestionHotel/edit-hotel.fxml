<AnchorPane fx:id="rootPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.Hotel.HotelAdmin.EditHotelController">

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <VBox alignment="TOP_CENTER" prefHeight="822.0" prefWidth="700.0" spacing="20" style="-fx-padding: 30;" AnchorPane.leftAnchor="222.0">
        <Label style="-fx-font-size: 26px; -fx-font-weight: bold;" text="Edit Hotel" />

        <GridPane hgap="10" vgap="10">
            <Label text="Hotel Name:">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <TextField fx:id="nameField" prefHeight="25.0" prefWidth="247.0" promptText="Enter hotel name" GridPane.columnIndex="1" />

            <Label text="Location:" GridPane.rowIndex="1">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <TextField fx:id="locationField" promptText="Enter location" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Rating:" GridPane.rowIndex="2">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <TextField fx:id="ratingField" promptText="Enter rating (1-5)" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Base Price:" GridPane.rowIndex="3">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <TextField fx:id="priceField" promptText="Enter base price" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
        </GridPane>

        <!-- Features Section -->
        <VBox maxWidth="700" spacing="15" style="-fx-padding: 20; -fx-background-color: #f8f9fa; -fx-background-radius: 10;">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Hotel Features" />

            <FlowPane fx:id="featuresPane" hgap="10" vgap="10">
                <CheckBox fx:id="parkingCheck" style="-fx-font-size: 14px;" text="Free Parking" />
                <CheckBox fx:id="poolCheck" style="-fx-font-size: 14px;" text="Swimming Pool" />
                <CheckBox fx:id="wifiCheck" style="-fx-font-size: 14px;" text="Free WiFi" />
                <CheckBox fx:id="restaurantCheck" style="-fx-font-size: 14px;" text="Restaurant" />
                <CheckBox fx:id="spaCheck" style="-fx-font-size: 14px;" text="Spa Services" />
                <CheckBox fx:id="gymCheck" style="-fx-font-size: 14px;" text="Fitness Center" />
                <CheckBox fx:id="barCheck" style="-fx-font-size: 14px;" text="Bar/Lounge" />
                <CheckBox fx:id="roomServiceCheck" style="-fx-font-size: 14px;" text="Room Service" />
                <CheckBox fx:id="petsCheck" style="-fx-font-size: 14px;" text="Pet Friendly" />
                <CheckBox fx:id="beachCheck" style="-fx-font-size: 14px;" text="Beach Access" />
            </FlowPane>
        </VBox>

        <!-- Images Section -->
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Images" />
        <HBox spacing="10">
            <Button fx:id="selectImageButton" onAction="#handleSelectImage" text="Select Image" />
            <ImageView fx:id="selectedImageView" fitHeight="100" fitWidth="150" preserveRatio="true" />
        </HBox>
        <ListView fx:id="imageListView" prefHeight="100.0" />
        <Button fx:id="removeImageButton" onAction="#handleRemoveImage" text="Remove Selected Image" />

        <!-- Buttons -->
        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="saveButton" onAction="#handleSave" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Save Changes" />
            <Button onAction="#handleCancel" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;" text="Cancel" />
        </HBox>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
    </VBox>
    <VBox prefHeight="880" prefWidth="220.0" style="-fx-background-color: #696969;">
        <children>
            <ImageView fitHeight="118.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@images/tuni.png" />
                </image>
            </ImageView>
            <Button alignment="BASELINE_LEFT" mnemonicParsing="false" prefHeight="70.0" prefWidth="290.0" styleClass="GestionUser" text="Gestion des utilisateurs" textFill="WHITE">
                <padding>
                    <Insets left="20.0" />
