        <TableView fx:id="reservationsTable" prefHeight="400.0" prefWidth="800.0" styleClass="reservations-table" AnchorPane.leftAnchor="222.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="70.0">
