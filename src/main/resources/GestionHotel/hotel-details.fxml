<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane prefHeight="800" prefWidth="1000" fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.Hotel.HotelAdmin.HotelDetailsController">

    <content>
        <VBox alignment="CENTER" maxWidth="900" spacing="20" style="-fx-background-color: white; -fx-padding: 20;" VBox.vgrow="ALWAYS">

            <!-- Bouton Retour -->
            <HBox alignment="CENTER_LEFT" spacing="10"  style="-fx-padding: 20; -fx-pref-width: 100%;">
                <Button fx:id="backButton" onAction="#handleBack" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-padding: 8 15; -fx-font-size: 14;" text="← Back to Hotels" />
            </HBox> <!-- Espace pour centrer -->

            <!-- Section des images -->
            <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;">
                <StackPane>
                    <ImageView fx:id="mainImageView" fitHeight="332.0" fitWidth="800" preserveRatio="true" />
                </StackPane>

                <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10;">
                    <Button fx:id="prevButton" style="-fx-font-size: 18; -fx-min-width: 40; -fx-min-height: 40; -fx-background-radius: 20;" text="❮" />
                    <ScrollPane fitToWidth="true" hbarPolicy="ALWAYS" prefHeight="90.0" prefWidth="600" style="-fx-background-color: transparent;">
                        <content>
                            <HBox fx:id="thumbnailBox" alignment="CENTER" spacing="10" />
                        </content>
                    </ScrollPane>
                    <Button fx:id="nextButton" style="-fx-font-size: 18; -fx-min-width: 40; -fx-min-height: 40; -fx-background-radius: 20;" text="❯" />
                </HBox>
            </VBox>

            <!-- Détails de l'hôtel -->
            <VBox alignment="CENTER" maxWidth="900" spacing="15" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 10;                          -fx-border-radius: 10; -fx-border-color: #e0e0e0;">

                <Label fx:id="nameLabel" style="-fx-font-size: 24; -fx-font-weight: bold;" />

                <HBox spacing="20">
                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <Label fx:id="locationLabel" style="-fx-font-size: 16;" />
                        <Label fx:id="priceLabel" style="-fx-font-size: 18; -fx-text-fill: #2196F3;" />
                    </VBox>
                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Button fx:id="editButton" onAction="#handleEdit" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Edit Details" />
                        <Button fx:id="deleteButton" onAction="#handleDelete" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="Delete Hotel" />
                        <Button fx:id="listRoomsButton" onAction="#handleListRooms" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 5;" text="List Rooms" />
                    </HBox>
                </HBox>

                <Separator />

                <!-- Section des caractéristiques -->
                <VBox fx:id="featuresBox" maxWidth="800" spacing="10" style="-fx-padding: 10; -fx-background-color: #f9f9f9; -fx-border-radius: 5;">
                    <!-- Features dynamically added here -->
                </VBox>

            </VBox>

            <Region prefHeight="20" /> <!-- Espace pour centrer -->
        </VBox>
    </content>
</ScrollPane>
