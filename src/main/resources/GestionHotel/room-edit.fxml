            <Label text="Room Image:" />
            <HBox spacing="10">
                <ImageView fx:id="roomImageView" fitHeight="100" fitWidth="150" preserveRatio="true" />
                <Button onAction="#handleSelectImage" text="Select Image" />
            </HBox>

