<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esprit.controllers.Voiture.ListVoituresController">

    <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20px;" prefWidth="1000" prefHeight="700">

        <AnchorPane>
            <Button fx:id="modeSombreButton" text="🌙 Mode Sombre" onAction="#toggleModeSombre"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 12px; -fx-background-radius: 20px;"
                    AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"/>
        </AnchorPane>

        <!-- Bouton Ajouter -->
        <HBox HBox.hgrow="ALWAYS">
            <Button fx:id="ajouterVoitureButton" text="➕ Ajouter une Voiture"
                    style="-fx-font-size: 16px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10px 20px;"
                    HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Bouton pour linterface client -->
        <HBox HBox.hgrow="ALWAYS">
            <Button fx:id="HomeClientButton" text="Session Client"
                    style="-fx-font-size: 16px; -fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10px 20px;"
                    HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Barre de recherche pleine largeur -->
        <TextField fx:id="searchField" promptText="Rechercher..."
                   style="-fx-font-size: 16px; -fx-padding: 10px; -fx-background-radius: 8px;"
                   VBox.vgrow="NEVER"/>

        <!-- Section des filtres en pleine largeur -->
        <HBox spacing="10" alignment="CENTER" HBox.hgrow="ALWAYS">
            <ComboBox fx:id="marqueFilter" promptText="Marque" HBox.hgrow="ALWAYS"/>
            <ComboBox fx:id="statutFilter" promptText="Statut" HBox.hgrow="ALWAYS"/>
            <Slider fx:id="prixSlider" min="0" max="500" value="500" HBox.hgrow="ALWAYS"/>
            <Label fx:id="prixLabel" text="Max: 500 TND"/>
            <TextField fx:id="anneeFilter" promptText="Année" HBox.hgrow="ALWAYS"/>
            <Button text="🔍 Filtrer" fx:id="filtrerButton" HBox.hgrow="ALWAYS"/>
        </HBox>

        <!-- Grille des voitures qui occupe tout l'espace restant -->
        <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS">
            <GridPane fx:id="voituresGrid" hgap="20" vgap="20" style="-fx-padding: 15px;"
                      GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
            </GridPane>
        </ScrollPane>

    </VBox>
</AnchorPane>
