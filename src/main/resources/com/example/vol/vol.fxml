<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjouterVolsController">
    <!-- Title for the form -->
    <Label text="Reservation Vol" layoutX="200" layoutY="20" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>

    <!-- Form Layout -->
    <VBox spacing="10" layoutX="50" layoutY="60" alignment="TOP_LEFT" style="-fx-background-color: #F4F4F4; -fx-padding: 20;">
        <!-- Flight ID -->
        <HBox spacing="10">
            <Label text="Flight ID:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="flightIdField" prefWidth="200" />
        </HBox>

        <!-- Departure -->
        <HBox spacing="10">
            <Label text="Departure:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="departureField" prefWidth="200" />
            <Label fx:id="errorLabelDeparture" textFill="red" visible="false"/>
        </HBox>

        <!-- Destination -->
        <HBox spacing="10">
            <Label text="Destination:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="destinationField" prefWidth="200" />
            <Label fx:id="errorLabelDestination" textFill="red" visible="false"/>
        </HBox>

        <!-- Departure Date -->
        <HBox spacing="10">
            <Label text="Departure Date:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <DatePicker fx:id="departureDateField" prefWidth="200" />
            <Label fx:id="errorLabelDepartureDate" textFill="red" visible="false"/>
        </HBox>

        <!-- Arrival Date -->
        <HBox spacing="10">
            <Label text="Arrival Date:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <DatePicker fx:id="arrivalDateField" prefWidth="200" />
            <Label fx:id="errorLabelArrivalDate" textFill="red" visible="false"/>
        </HBox>

        <!-- Capacity -->
        <HBox spacing="10">
            <Label text="Capacity:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="capacityField" prefWidth="200" />
            <Label fx:id="errorLabelCapacity" textFill="red" visible="false"/>
        </HBox>

        <!-- Available Seats -->
        <HBox spacing="10">
            <Label text="Available Seats:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="availableSeatsField" prefWidth="200" />
            <Label fx:id="errorLabelAvailableSeats" textFill="red" visible="false"/>
        </HBox>

        <!-- Price -->
        <HBox spacing="10">
            <Label text="Price:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="priceField" prefWidth="200" />
            <Label fx:id="errorLabelPrice" textFill="red" visible="false"/>
        </HBox>

        <!-- Buttons (Add, Modify, Delete, View) -->
        <HBox spacing="20" alignment="CENTER">
            <Button fx:id="addButton" text="Add" onAction="#ajouterVol" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button fx:id="modifyButton" text="Modify" onAction="#modiferVol" style="-fx-background-color: #FFC107; -fx-text-fill: white;"/>
            <Button fx:id="deleteButton" text="Delete" onAction="#supprimerVol" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
            <Button fx:id="viewButton" text="View" onAction="#showFlightDetails" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>

        </HBox>

        <!-- Search Section -->
        <HBox spacing="10" alignment="CENTER">
            <Label text="Search" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2A4D6A;"/>
            <TextField fx:id="priceField1" prefWidth="200" />
            <Button fx:id="viewButton1" text="Search" onAction="#afficherVol" style="-fx-background-color: #9E9E9E; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>
